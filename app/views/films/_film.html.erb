
<div id="<%= dom_id film %>" class="carte-film">
  <p>
    <strong>Title:</strong>
    <%= film.title %>
  </p>

  <p>
    <strong>Summary:</strong>
    <%= film.summary %>
  </p>

  <p>
    <%# <strong>Image:</strong> %>
    <img src="<%= film.image %>" alt="Image du film" width="300px">
  </p>

  <p>
    <strong>Rating:</strong>
    <%= film.rating %>
  </p>

  <p class="btn btn-primary">
      <%= link_to "Show this film", film %>
    </p>
</div>
